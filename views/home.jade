        $('div#footer').parent().removeClass();
      },1000);
      $('#lock').click(function() {
        locked(($('#lock').is(':checked')));
      });
      
      function locked(en) {
        var el;
        for (var x = 0; x < 8; x++) {
            el = eval("\$\(\"\#\d" + x + "\"\)");
            el.prop('disabled', en);
            el = eval("\$\(\"\#\a" + x + "\"\)");
            el.prop('disabled', en);
        }
      }
    });